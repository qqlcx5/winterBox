
.area {
  min-height: 200rpx;
  width: 100%;
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.area-title {
  height: 84rpx;
  width: 100%;
  line-height: 84rpx;
  background: #F7F7F7;
  font-size: 32rpx;
  color: #666;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.area-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 134rpx;
  width: 100%;
  overflow: hidden;
  border-bottom: 2rpx solid #F1F1F1;
  font-size: 28rpx;
  color: #6c6c6c;
}
.area-image {
  height: 134rpx;
  width: 150rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.area-image image {
  width: 100rpx;
  height: 100rpx;
  background-color: #d8d8d8;
  border-radius: 12rpx;
}
.total {
  width: 750rpx;
  height: 68rpx;
  background-color: #ffffff;
  text-align: center;
  line-height: 68rpx;
  color: #999999;
}