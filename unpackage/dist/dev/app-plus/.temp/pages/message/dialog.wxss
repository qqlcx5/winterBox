  justify-content: flex-end;
}
.my-img {
  position: absolute;
  top: 0;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
}
.my-box {
  margin-right: 140rpx;
  background-color: #79c343;
  border-radius: 10rpx;
  color: #ffffff;
