  height: 100rpx;
  background: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 2rpx solid #EEEEEE;
}
.send-message image {
  height: 64rpx;
  width: 64rpx;
}
