  padding: 0 30rpx;
  box-sizing: border-box;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 60rpx;
  background-color: #ffffff;
  border: 2rpx solid #EEEEEE;
  border-radius: 12rpx;
