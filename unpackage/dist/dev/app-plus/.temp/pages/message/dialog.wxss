  font-size: 28rpx;
}
.you {
  position: relative;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
}
.you-img {
  position: absolute;
  top: 0;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
}
