}
.my-arrow {
  position: absolute;
  top: 20rpx;
  right: -28rpx;
  width: 0;
  height: 0;
  font-size: 0;
  border: solid 16rpx;
  background-color: #f7f7f7;
  border-color: #f7f7f7 #f7f7f7 #f7f7f7 #79c343;
}
