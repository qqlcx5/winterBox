
.page {
  min-height: 100vh;
  width: 100%;
  background-color: #F7F7F7;
}
.bottomBox {
  height: 100rpx;
  width: 100%;
}
.isbottomBox {
  height: 400rpx;
  width: 100%;
}
.dialogTime {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}
.dialogItem {
  display: -webkit-box;
