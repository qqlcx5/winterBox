
.area {
  min-height: 200rpx;
  width: 100%;
  background: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.area-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  height: 134rpx;
  width: 100%;
  overflow: hidden;
  border-bottom: 2rpx solid #F1F1F1;
  font-size: 28rpx;
  color: #6c6c6c;
}
.area-image {
  height: 134rpx;
  width: 150rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.area-image image {
  width: 100rpx;
  height: 100rpx;
  background-color: #d8d8d8;
  border-radius: 12rpx;
}
.area-msg {
  height: 134rpx;
  width: 600rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.area-title {
  font-weight: bold;
  color: #1a1a1a;
  margin-bottom: 10rpx;
}
.area-desc {
  font-size: 28rpx;
  color: #999999;
}