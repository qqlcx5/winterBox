
.header-right text {
  position: absolute;
  right: 30rpx;
  top: 70rpx;
  font-size: 28rpx;
  color: #ffffff;
}
.list {
  width: 750rpx;
  min-height: 100rpx;
}
.list-title {
  height: 100rpx;
  line-height: 100rpx;
  width: 690rpx;
  display: block;
  color: #deae42;
  font-size: 28rpx;
  border-bottom: 2rpx solid #E5E5E5;
  padding: 0 30rpx;
}
.top-border {
  border-top: 20rpx solid #f6f6f6;
}
.item {
  width: 750rpx;
  line-height: 100rpx;
  height: 100rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 0 30rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #e5e5e5;
}
.item-name {
  width: 180rpx;
  line-height: 100rpx;
}
.item-input {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  height: 100rpx;
  text-align: right;
  font-size: 32rpx;
  color: #333333;
}