
.pay {
  min-height: 300rpx;
  width: 80%;
  border: solid 2rpx #1a1a1a;
  overflow: hidden;
  border-radius: 12rpx;
  margin: 60rpx auto 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.payheader image {
  width: 25rpx;
  height: 25rpx;
  left: 30rpx;
  top: 36rpx;
  position: absolute;
}
.payinfo {
  height: 170rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  width: 100%;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  border-bottom: 4rpx solid #1a1a1a;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.payinfo image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}
.payinfo ._p {
  font-size: 28rpx;
  color: #1a1a1a;
}
.pay-bill {
  height: 100rpx;
  line-height: 100rpx;
  width: 100%;
  padding-left: 30rpx;
  box-sizing: border-box;
  color: #b6b6b6;
}
.pay-transfer {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 120rpx;
  width: 100%;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}
.pay-transfer-img {
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
}
.pay-transfer-input {
  height: 80rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  text-align: right;
}
.pay-transfer-text {
  margin-left: 20rpx;
  width: 100rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 36rpx;
  color: #1a1a1a;
}
.fix {
  border-top: solid 2rpx #e3e3e3;
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  min-height: 0;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  box-sizing: border-box;
}
.fixnum {
  width: 33.33%;
  height: 108rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  box-sizing: border-box;
  font-size: 40rpx;
  border-right: 2rpx solid #e3e3e3;
  border-bottom: 2rpx solid #e3e3e3;
  background-color: #FFFFFF;
}
.fixnum:nth-of-type(10) {
  background-color: #e3e3e3;
}
.fixnum:nth-of-type(12) {
  background-color: #e3e3e3;
}
.fixnum image {
  width: 50rpx;
  height: 40rpx;
}